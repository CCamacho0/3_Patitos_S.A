@model _3_Patitos_S.A.Models.Persona

@{
    ViewData["Title"] = "Detalles";
}

<h1>Información de Usuario</h1>

<div>
    <hr class="hr-gold" style="height: 3px"/>
    <dl class="row">

        <dt class="col-sm-2">Id de la persona</dt>
        <dd class="col-sm-10">@ViewBag.Persona[0].Id_Persona</dd>

        <dt class = "col-sm-2">Nombre completo</dt>
        <dd class="col-sm-10">@ViewBag.Persona[0].Nombre_Persona</dd>

        <dt class="col-sm-2">Fecha de nacimiento</dt>
        <dd class="col-sm-10">@ViewBag.Persona[0].Fecha_Nacimiento.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Direccion</dt>
        <dd class="col-sm-10">@ViewBag.Persona[0].Direccion</dd>

        <dt class="col-sm-2">Numero de telefono</dt>
        <dd class="col-sm-10">@ViewBag.Persona[0].Telefono</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@ViewBag.Persona[0].Correo</dd>

        <dt class = "col-sm-2">Rol</dt>
        <dd class="col-sm-10">@ViewBag.Persona[0].Nombre_Rol</dd>
       
        <dt class = "col-sm-2 ">Categoria</dt>
        <dd class="col-sm-10">@ViewBag.Persona[0].Nombre_categoria</dd>

    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-action="IndexU" asp-controller="Productos">Regresar</a>
    <a class="btn btn-warning" asp-action="UpdateClient" asp-controller="Persona" asp-route-id="@ViewBag.Persona[0].Id_Persona">Editar</a>
</div>