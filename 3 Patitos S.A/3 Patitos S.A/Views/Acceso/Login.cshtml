
@{
    ViewBag.Title = "Login";

}


<h2>Login</h2>
<div class="row">

    <form id="frm">

        <div class="form-group">

            <label>Correo </label>
            <input type="email" name="Usuario" />

        </div>
        <br>
        <div class="form-group">
            <label>Contraseña</label>
            <input type="text" name="Contrasena" />
        </div>
        <br>
        <div class="form-group">

            <input type="submit" value="Entrar" class="btn btn-succes" style="background-color: lightcoral" />
        </div>



    </form>


</div>

@section scripts {

    <script>

    $(document).ready(function () {

        $("#frm").submit(function (e) {
            e.preventDefault();

            url = "@Url.Content("~/Acceso/Enter")"
            parametros = $(this).serialize();

            $.post(url, parametros, function (data) {

                if (data=="1") {
                    document.location.href = "@Url.Content("~/Home/Index")";
                } else {
                    alert(data)
                }


            })
        })
    })

    </script>
}
